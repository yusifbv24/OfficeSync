{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // General application logs
      "Microsoft.AspNetCore": "Warning", // ASP.NET Core framework logs
      "Microsoft.EntityFrameworkCore": "Information" // Database query logs
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=file_service;Username=postgres;Password=mysecretpassword;Port=5432"
  },

  "Jwt": {
    "SecretKey": "ThisIsAVerySecureSecretKeyForJWT2025!@#$%^&*()",
    "Issuer": "IdentityService",
    "Audience": "ChatApplication",
    "ExpirationMinutes": 60
},
  "FileStorage": {
    "BasePath": "C:\\FileStorage" // Change this to your actual storage location
  },
  "ServiceEndpoints": {
    "UserServiceUrl": "http://localhost:5002",
    "ChannelServiceUrl": "http://localhost:5003"
  },
  "FileUpload": {
    "MaxFileSizeBytes": 104857600,
    "AllowedExtensions": [
      // Images
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".webp",
      ".svg",
      // Documents  
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".ppt",
      ".pptx",
      // Text
      ".txt",
      ".csv",
      ".html",
      ".xml",
      // Archives
      ".zip",
      ".rar",
      ".7z",
      // Media
      ".mp4",
      ".mpeg",
      ".mov",
      ".avi",
      ".mp3",
      ".wav",
      ".ogg"
    ]
  },
  "Thumbnail": {
    "Width": 200,
    "Height": 200,
    "Quality": 80
  },
  "Performance": {
    "DatabaseMaxPoolSize": 100,
    "ServiceCallTimeoutSeconds": 30,
    "EnableResponseCompression": true
  }
}